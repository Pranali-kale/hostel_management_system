<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Notices</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f4f4f4;
        }
        h2 {
            text-align: center;
        }
        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background: white;
            padding: 10px;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }
        th {
            background: #007bff;
            color: white;
        }
        a, button {
            display: inline-block;
            padding: 5px 10px;
            margin: 5px;
            text-decoration: none;
            color: white;
            background: #007bff;
            border: none;
            cursor: pointer;
            border-radius: 4px;
        }
        .delete-btn {
            background: red;
        }
        .edit-btn {
            background: green;
        }
    </style>
</head>
<body>

<h2>Manage Notices</h2>

<form action="/admin/notices/add" method="POST" style="width: 50%; margin: auto; background: white; padding: 20px; border-radius: 5px;">
    <label>Notice Title:</label>
    <input type="text" name="title" required>

    <label>Notice Description:</label>
    <textarea name="description" rows="4" required></textarea>

    <button type="submit">Add Notice</button>
</form>

<table>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Date</th>
        <th>Actions</th>
    </tr>
    <% notices.forEach(notice => { %>
        <tr>
            <td><%= notice.title %></td>
            <td><%= notice.description %></td>
            <td><%= new Date(notice.date).toLocaleDateString() %></td>
            <td>
                <a href="/admin/notices/edit/<%= notice._id %>" class="edit-btn">Edit</a>
                <form action="/admin/notices/delete/<%= notice._id %>" method="POST" style="display:inline;">
                    <button type="submit" class="delete-btn">Delete</button>
                </form>
            </td>
        </tr>
    <% }); %>
</table>

</body>
</html>
