 <!DOCTYPE html>
<html lang="en">
<head>
    <title>Allocate Room</title>
</head>
<body>
    <div id="room">
    <h2>Allocate Room</h2>
    <form action="/admin/rooms/allocate" method="POST">
        <label>Student:</label>
        <select name="studentId">
            <% students.forEach(student => { %>
                <option value="<%= student._id %>"><%= student.name %> (Roll: <%= student.rollNumber %>)</option>
            <% }); %>
        </select>
        <label>Room:</label>
        <select name="roomId">
            <% rooms.forEach(room => { %>
                <!-- <option value="<%= room._id %>">Room <%= room.roomNumber %> (Capacity: <%= room.capacity %>)</option> -->
                <option value="<%= room._id %>">Room <%= room.roomNumber %> (Capacity: <%= room.capacity %>)</option>
            <% }); %>
        </select>
        <button type="submit">Allocate Room</button>
    </form>
</div>
</body>
